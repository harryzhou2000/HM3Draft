\begin_inset Formula \begin{equation}
    \begin{aligned}
                                  & \left\{
        \begin{array}[2]{ll}
            \Res(\uu^{n+1},\uu^{*})   & = 0 \\
            \Res^*(\uu^{n+1},\uu^{*}) & = 0 \\
        \end{array}
        \right.                                               \\
    \end{aligned}
\end{equation}
\end_inset

with 
\begin_inset Formula \begin{equation}
    \begin{aligned}
        \Res(\uu^{n+1},\uu^{*})   & \doteq \uu^{n+1} - \left(
        \uu^{n} +
        \inc t
        \left[
            b_1\R(t^{n,1}, \uu^n) +
            b_2\R(t^{n,2}, \uu^*) +
            b_3\R(t^{n,3}, \uu^{n+1})
            \right]
        \right)                                               \\
        \Res^*(\uu^{n+1},\uu^{*}) & \doteq\uu^{*} - \left(
        a_1\uu^{n} +
        a_2\uu^{n+1} +
        \inc t
        \left[
            d_1\R(t^{n,1}, \uu^n) +
            d_2\R(t^{n,3}, \uu^{n+1})
            \right]
        \right)
    \end{aligned}
\end{equation}
\end_inset

