\begin_inset Formula \begin{equation}
    \begin{aligned}
        \label{eq:TRU2R2}
        \uu^{n+c_2} & =
        a_{1,U2R2}\uu^{n} +
        a_{2,U2R2}\uu^{n + 1}
        \\ & +
        \inc t^n d_{1,U2R2}\R^{n} +
        \inc t^n d_{2,U2R2}\R^{n + 1}
    \end{aligned}
\end{equation}
